<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignTop="@id/connection_toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".connection.ConnectionActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/win"
        android:id="@+id/win"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="onButtonDown" />

    <Button
        android:id="@+id/win_shift_k"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/shift_tab"
        android:onClick="onButtonDown"
        android:text="@string/win_shift_k" />

    <Button
        android:id="@+id/win_tab"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab"
        android:layout_alignParentRight="true"
        android:onClick="onButtonDown"
        android:text="@string/win_tab" />

    <Button
        android:id="@+id/shift_tab"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@id/win"
        android:layout_toLeftOf="@id/win"
        android:onClick="onButtonDown"
        android:text="@string/shift_tab" />

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/tab"
        android:id="@+id/tab"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/win"
        android:layout_toEndOf="@id/win"
        android:layout_marginTop="50dp"
        android:onClick="onButtonDown" />

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/up_arrow"
        android:id="@+id/up"
        android:layout_above="@+id/down"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonDown" />

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/down_arrow"
        android:id="@id/down"
        android:layout_above="@+id/inputText"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="onButtonDown" />

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/page_up"
        android:id="@+id/page_up"
        android:layout_above="@id/down"
        android:layout_toLeftOf="@id/down"
        android:layout_toStartOf="@id/down"
        android:onClick="onButtonDown" />

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/page_down"
        android:id="@+id/page_down"
        android:layout_above="@id/down"
        android:layout_toRightOf="@id/down"
        android:layout_toEndOf="@id/down"
        android:onClick="onButtonDown" />

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/left_arrow"
        android:id="@+id/left"
        android:layout_alignBottom="@id/down"
        android:layout_toLeftOf="@id/down"
        android:layout_toStartOf="@id/down"
        android:onClick="onButtonDown" />

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/right_arrow"
        android:id="@+id/right"
        android:layout_alignBottom="@id/down"
        android:layout_toRightOf="@id/down"
        android:layout_toEndOf="@id/down"
        android:onClick="onButtonDown" />

    <com.nassosaic.tolo.remotepccontroller.EditTextCustom
        android:id="@+id/inputText"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_alignStart="@id/left"
        android:layout_alignEnd="@id/right"
        android:layout_alignRight="@id/right"
        android:layout_above="@+id/enter"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:hint="&#60;&#60;&#60; Type"
        android:imeOptions="actionSend"
        android:singleLine="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/enter"
        android:id="@+id/enter"
        android:layout_alignStart="@id/left"
        android:layout_alignEnd="@id/right"
        android:layout_alignRight="@id/right"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:onClick="onButtonDown" />

    <TextView
        android:id="@+id/textViewCheckConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorAccentRipple" />

</RelativeLayout>
